<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="extra"
            type="com.timmytruong.timmypos.model.DialogOptionItem" />

        <variable
            name="checked"
            type="androidx.databinding.ObservableBoolean" />
    </data>

    <com.google.android.material.chip.Chip
        style="@style/DialogOptionItemChip"
        android:id="@+id/chip_extra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{extra.name}"
        android:textColor="@{checked ? @color/white : @color/black}"
        android:padding="@dimen/padding_small_medium"
        android:textAlignment="center"
        android:checkable="true"
        android:clickable="true"
        android:focusable="true"
        android:checked="@{checked}"
        app:chipBackgroundColor="@{checked ? @color/blue_order : @color/unselected}"
        app:rippleColor="@color/secondary"
        app:chipCornerRadius="@dimen/chip_radius"
        tools:checked = "true"
        tools:text="Chili Oil ($0.50)"
        />
</layout>