<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:background="@color/primaryLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <include
            android:id="@+id/soups_image_desc_quantity"
            layout="@layout/alert_basic_body" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_small">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/soups_extras_size_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/DialogOptionItemTitles"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Size:"/>

                <Spinner
                    android:id="@+id/soups_extras_size_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/soups_extras_size_title" />

                <TextView
                    android:id="@+id/soups_extras_broth_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_medium"
                    style="@style/DialogOptionItemTitles"
                    app:layout_constraintLeft_toRightOf="@id/soups_extras_size_spinner"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Broth Option:" />

                <Spinner
                    android:id="@+id/soups_extras_broth_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown"
                    app:layout_constraintTop_toBottomOf="@id/soups_extras_broth_title"
                    app:layout_constraintLeft_toLeftOf="@id/soups_extras_broth_title"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/soups_extras_extra_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/DialogOptionItemTitles"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    tools:text="Extras:"/>

                <com.google.android.material.chip.ChipGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipSpacing="8dp"
                    app:layout_constraintTop_toBottomOf="@id/soups_extras_extra_title"
                    app:layout_constraintLeft_toLeftOf="@id/soups_extras_extra_title" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </LinearLayout>

</layout>